<table>
  <thead>
    <tr>
      <th><%= Comment.model_name.human%></th>
      <th><%= User.model_name.human%></th>
      <th><%= t :at_time%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% send_to.comments.each do |comment| %>
      <tr>
        <td><%= comment.comment %></td>
        <td><%= comment.user.name == "" ? comment.user.email : comment.user.name %></td>
        <td><%= l comment.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
