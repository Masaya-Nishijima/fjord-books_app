<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>User</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% send_to.comments.each do |comment| %>
      <tr>
        <td><%= comment.comment %></td>
        <td><%= comment.user.name == "" ? comment.user.email : comment.user.name %></td>
        <td><%= comment.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
