<p id="notice"><%= notice %></p>

<h1><%= Report.model_name.human%></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:name)%></th>
      <th><%= Report.human_attribute_name(:body)%></th>
      <th><%= User.model_name.human %></th>
      <th><%= Report.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.name %></td>
        <td><%= report.body %></td>
        <td><%= report.user.name == "" ? report.user.email : report.user.name %></td>
        <td><%= l report.created_at %></td>
        <td><%= link_to t('views.common.show'), report %></td>
        <% if report.user == current_user %>
          <td><%= link_to t('views.common.edit'), edit_report_path(report) %></td>
          <td><%= link_to t('views.common.destroy'), report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

